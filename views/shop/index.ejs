<!DOCTYPE html>
<html lang="en">
  <head>
      <%include ../partials/head %>   
  </head>
  <body>
    <header>
        <%include ../partials/header %>
    </header>
    
    <p>Welcome to Product</p>
    <h3>products</h3>
    <% products.forEach(function(product) { %>  
    <div class="row">
            <% product.forEach(function(prod) { %>  
            <div class="col-sm-6 col-md-4">
                  <div class="thumbnail">
                    <img src="<%= prod.imagePath %>" alt="...">
                      <div class="caption">
                        <h3>Thumbnail label</h3>
                        <p><%= prod.description %></p>
                        <div class="clearfix">
                          <div class="price pull-left">$<%= prod.price %></div>
                        <a href="/add-to-cart/<%= prod._id %>" class="btn btn-primary pull-right" role="button">Add to Cart</a>
                        </div>                        
                      </div>
                  </div>      
            </div>
             <% }); %>      
    </div>
    <% }); %>


     <footer>
        <%include ../partials/footer %>
    </footer>
 
  </body>
</html>
